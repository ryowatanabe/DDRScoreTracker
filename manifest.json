{
  "manifest_version": 2,
  "name": "DDR Score Tracker",
  "version": "0.0.1",

  "description": "",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "browser_action": {
    "default_title": "DDR Score Tracker"
  },

  "content_scripts": [
    {
      "matches": [
        "https://p.eagate.573.jp/*"
      ],
      "js": [
        "lib/jquery-3.4.1.min.js",
        "common/const.js",
        "common/logger.js",
        "common/MusicData.js",
        "common/ScoreData.js",
        "common/ChartData.js",
        "content_scripts/main.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "background": {
    "scripts": [
      "lib/jquery-3.4.1.min.js",
      "common/const.js",
      "common/logger.js",
      "common/MusicData.js",
      "common/ScoreData.js",
      "common/ChartData.js",
      "background/main.js"
    ],
    "persistent": false
  },

  "permissions": [
    "storage",
    "unlimitedStorage"
  ]
}

{
  "root": true,
  "env": {
    "browser": true,
    "webextensions": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "plugins": [
    "vue"
  ]
}

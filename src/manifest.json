{
  "manifest_version": 2,
  "name": "DDR Score Tracker",
  "version": null,

  "description": "Google Chrome extension for tracking your DanceDanceRevolution play records",

  "browser_action": {
    "default_title": "DDR Score Tracker"
  },

  "content_scripts": [
    {
      "matches": ["https://p.eagate.573.jp/game/ddr/ddra20/p/*"],
      "js": ["lib/jquery-3.4.1.min.js", "content_scripts/main.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],

  "background": {
    "page": "background/index.html",
    "persistent": false
  },

  "web_accessible_resources": ["common/*"],

  "permissions": ["storage", "unlimitedStorage"]
}
